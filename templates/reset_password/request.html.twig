{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50">
        <div class="max-w-md w-full p-6 bg-white rounded-lg shadow-md">
            <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Réinitialiser votre mot de passe</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <p class="text-gray-600 mb-4 text-center">
                Entrez votre adresse e-mail pour recevoir un lien de réinitialisation de mot de passe.
            </p>

            {{ form_start(requestForm, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    {{ form_label(requestForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
                    {{ form_errors(requestForm.email, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>

                <div class="flex items-center justify-between">
                    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        Envoyer le lien
                    </button>
                </div>
            {{ form_end(requestForm) }}

            <div class="mt-6 text-center">
                <a href="{{ path('app_login') }}" class="text-sm text-indigo-600 hover:text-indigo-500">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}