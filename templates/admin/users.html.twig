{% extends 'admin/base.admin.html.twig' %}

{% block content %}
    <div class="container mx-auto px-4 py-8" x-data="{ show: 'patients' }">
        <h1 class="text-3xl font-bold text-purple-800 mb-6">Gestion des Utilisateurs</h1>

        <!-- Switch Buttons -->
        <div class="flex gap-4 mb-8">
            <button
                    @click="show = 'patients'"
                    :class="show === 'patients' ? 'bg-purple-700 text-white' : 'bg-gray-200 text-gray-800'"
                    class="px-4 py-2 rounded shadow hover:bg-purple-800 transition"
            >
                Patients
            </button>
            <button
                    @click="show = 'medecins'"
                    :class="show === 'medecins' ? 'bg-purple-700 text-white' : 'bg-gray-200 text-gray-800'"
                    class="px-4 py-2 rounded shadow hover:bg-purple-800 transition"
            >
                Médecins
            </button>
        </div>

        <!-- Patients Table -->
        <div x-show="show === 'patients'" class="overflow-x-auto">
            <h2 class="text-xl font-semibold text-purple-800 mb-4">Liste des Patients</h2>
            <table class="min-w-full bg-white rounded-xl shadow-md">
                <thead class="bg-purple-100 text-left text-purple-800">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Prénom</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in patients %}
                    <tr class="border-t hover:bg-purple-50">
                        <td class="px-4 py-2">{{ user.id }}</td>
                        <td class="px-4 py-2">{{ user.email }}</td>
                        <td class="px-4 py-2">{{ user.lastName }}</td>
                        <td class="px-4 py-2">{{ user.firstName }}</td>
                        <td class="px-4 py-2">
                            <div x-data="{ open: false }" class="relative inline-block">
                                <button @click="open = !open" class="bg-purple-100 text-sm px-2 py-1 rounded">Menu</button>
                                <div x-show="open" @click.away="open = false" class="absolute right-0 mt-1 bg-white border shadow rounded w-32 z-10">
                                    <a href="{{ path('app_users_edit_admin', {id: user.id}) }}" class="block px-4 py-2 text-sm hover:bg-gray-100">Modifier</a>
                                    <form method="post" action="{{ path('app_users_edit_admin', {id: user.id}) }}">
                                        <button class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-100">Supprimer</button>
                                    </form>
                                    <a href="{{ path('app_user_reset_password_admin', {id: user.id}) }}" class="block px-4 py-2 text-sm hover:bg-gray-100">Réinitialiser</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5" class="text-center py-4">Aucun patient trouvé.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Médecins Table -->
        <div x-show="show === 'medecins'" x-cloak class="overflow-x-auto">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-purple-800">Liste des Médecins</h2>
                <a href="{{ path('app_users_add_admin') }}"
                   class="inline-flex items-center px-4 py-2 bg-purple-600 text-black text-sm font-medium rounded-lg shadow hover:bg-purple-700 transition">
                    + Ajouter Médecin
                </a>
            </div>

            <table class="min-w-full bg-white rounded-xl shadow-md">
                <thead class="bg-purple-100 text-left text-purple-800">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Nom</th>
                    <th class="px-4 py-2">Prénom</th>
                    <th class="px-4 py-2">Spécialité</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in medecins %}
                    <tr class="border-t hover:bg-purple-50">
                        <td class="px-4 py-2">{{ user.id }}</td>
                        <td class="px-4 py-2">{{ user.email }}</td>
                        <td class="px-4 py-2">{{ user.lastName }}</td>
                        <td class="px-4 py-2">{{ user.firstName }}</td>
                        <td class="px-4 py-2">{{ user.specialty }}</td>
                        <td class="px-4 py-2">
                            <div x-data="{ open: false }" class="relative inline-block">
                                <button @click="open = !open" class="bg-purple-100 text-sm px-2 py-1 rounded">Menu</button>
                                <div x-show="open" @click.away="open = false" class="absolute right-0 mt-1 bg-white border shadow rounded w-32 z-10">
                                    <a href="{{ path('app_users_edit_admin', {id: user.id}) }}" class="block px-4 py-2 text-sm hover:bg-gray-100">Modifier</a>
                                    <form method="post" action="{{ path('app_users_edit_admin', {id: user.id}) }}">
                                        <button class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-100">Supprimer</button>
                                    </form>
                                    <a href="{{ path('app_user_reset_password_admin', {id: user.id}) }}" class="block px-4 py-2 text-sm hover:bg-gray-100">Réinitialiser</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="6" class="text-center py-4">Aucun médecin trouvé.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
