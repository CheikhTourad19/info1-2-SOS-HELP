{% extends 'admin/base.admin.html.twig' %}

{% block content %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-black">
                <h4 class="text-2xl font-bold mb-6">Ajouter un médecin</h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}


                <div class="mb-3">
                    {{ form_label(form.lastName, 'Nom') }}
                    {{ form_widget(form.lastName, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500'},
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                    } ) }}
                    {{ form_errors(form.lastName) }}
                </div>


                <div class="mb-3">
                    {{ form_label(form.firstName, 'Prénom') }}
                    {{ form_widget(form.firstName, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500'},
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                    }) }}
                    {{ form_errors(form.firstName) }}
                </div>


                <div class="mb-3">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500'},
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                     }) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500'},
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                    } ) }}
                    {{ form_errors(form.password) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.specialty, 'Spécialité') }}
                    {{ form_widget(form.specialty, {
                        'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-violet-500'},
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700'}
                    }) }}
                    {{ form_errors(form.specialty) }}
                </div>

                <button type="submit"
                        class="px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-700">
                    Enregistrer
                </button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


