{% extends 'medecin/base.medecin.html.twig' %}

{% block title %}Contactez Nous {% endblock %}

{% block content %}
    <div class="min-h-screen bg-white py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
            <!-- En-tête -->
            <div class="text-center mb-12">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Contactez Nous</h1>
                <p class="mt-3 max-w-md mx-auto text-lg text-gray-500">
                    Signalez des problèmes techniques, suggérez des améliorations ou posez des questions sur le système.
                </p>
            </div>

            <div class="bg-white shadow-md rounded-xl border border-gray-200 overflow-hidden">
                <div class="grid grid-cols-1 lg:grid-cols-2">
                    <!-- Formulaire -->
                    <div class="p-8">
                        <h2 class="text-xl font-semibold text-gray-800 mb-6">Envoyer une demande technique</h2>
                        <form class="space-y-4" action="{{ path('app_contact_medecin') }}" method="POST">
                            {% set input_classes = 'w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-violet-500 focus:border-violet-500' %}

                            <div>
                                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Votre Nom</label>
                                <input required type="text" id="name" name="name" class="{{ input_classes }}">
                            </div>

                            <div>
                                <label for="role" class="block text-sm font-medium text-gray-700 mb-1">Votre Rôle</label>
                                <select required id="role" name="role" class="{{ input_classes }}">
                                    <option value="">Sélectionnez votre rôle</option>
                                    <option value="pharmacist">Medicin</option>
                                    <option value="admin">medecin</option>
                                </select>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                                <input required type="email" id="email" name="email" class="{{ input_classes }}">
                            </div>

                            <div>
                                <label for="issue-type" class="block text-sm font-medium text-gray-700 mb-1">Type de problème</label>
                                <select id="issue-type" name="issue-type" class="{{ input_classes }}">
                                    <option value="">Sélectionnez le type</option>
                                    <option value="bug">Rapport de bug</option>
                                    <option value="feature">Demande de fonctionnalité</option>
                                    <option value="security">Problème de sécurité</option>
                                    <option value="other">Autre problème technique</option>
                                </select>
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Description détaillée</label>
                                <textarea required id="message" name="message" rows="5" class="{{ input_classes }}" placeholder="Veuillez inclure les étapes pour reproduire le bug si applicable"></textarea>
                            </div>

                            <div class="pt-2">
                                <button type="submit" class="w-full flex justify-center items-center px-4 py-3 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                    Envoyer la Demande
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Informations -->
                    <div class="bg-violet-50 p-8">
                        <div class="h-full flex flex-col justify-between">
                            <div>
                                <h2 class="text-xl font-semibold text-gray-800 mb-4">Informations de l'Équipe</h2>
                                <ul class="space-y-4 text-gray-600">
                                    <li class="flex items-start">
                                        <span class="text-violet-600 mr-2">✔️</span> Signaler des dysfonctionnements
                                    </li>
                                    <li class="flex items-start">
                                        <span class="text-violet-600 mr-2">✔️</span> Proposer des améliorations
                                    </li>
                                    <li class="flex items-start">
                                        <span class="text-violet-600 mr-2">✔️</span> Signaler des problèmes de sécurité
                                    </li>
                                </ul>
                            </div>

                            <div class="mt-6 bg-white p-4 rounded-lg border border-violet-200">
                                <h3 class="font-medium text-gray-800 mb-2">Support Technique Urgent</h3>
                                <div class="flex items-center text-gray-700 text-sm">
                                    <svg class="h-5 w-5 text-violet-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    +216 72 243 235
                                </div>
                                <div class="flex items-center text-gray-700 text-sm mt-2">
                                    <svg class="h-5 w-5 text-violet-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    MedForum@contact.com
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Horaires -->
            <div class="mt-8 text-center text-gray-400 text-sm">
                <p>travail de lundi au vendredi de 8h00 à 17h30</p>
                <p class="mt-1">Temps de réponse moyen : 1 heure (hors week-end).</p>
            </div>
        </div>
    </div>
{% endblock %}
