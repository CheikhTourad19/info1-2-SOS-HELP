{% extends 'patient/base.patient.html.twig' %}

{% block content %}
    <div class="space-y-6 max-w-2xl mx-auto">
        {% for post in posts %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                <!-- Post Header -->
                <div class="p-4 flex items-center space-x-3">
                    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold">
                        {{ post.author.firstname|first|upper }}
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900">{{ post.author.firstname }} {{ post.author.lastname }}</h3>
                        <p class="text-xs text-gray-500">{{ post.createdAt|date('M d, Y') }}</p>
                    </div>
                </div>

                <!-- Post Content -->
                <div class="px-4 pb-3">
                    <h2 class="font-bold text-lg mb-2 text-gray-800">{{ post.title }}</h2>
                    <p class="text-gray-700 whitespace-pre-line">{{ post.content }}</p>
                </div>


                <div class="px-4 py-2 border-t border-gray-100 text-sm text-gray-500 flex justify-between items-center">
                    <span>{{ post.comments|length }} commentaires</span>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="inline-flex items-center px-3 py-1.5 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        Voir
                    </a>
                </div>


                <!-- Comments Preview -->
                {% if post.comments|length > 0 %}
                    <div class="bg-gray-50 px-4 py-3 space-y-3">
                        {% for comment in post.comments|slice(0, 2) %}
                            <div class="flex space-x-2">
                                <div class="h-8 w-8 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-500 text-xs font-bold">
                                    {{ comment.author.firstname|first|upper }}
                                </div>
                                <div class="flex-1">
                                    <div id="comment-{{ comment.id }}" class="bg-white rounded-lg shadow-sm p-4 border border-gray-100">
                                        <p class="font-medium text-sm">{{ comment.author.firstname }}</p>
                                        <p class="text-gray-700 text-sm">{{ comment.content }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        {% if post.comments|length > 2 %}
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="text-indigo-600 text-sm font-medium hover:underline">
                                Voir les {{ post.comments|length - 2 }} autres commentaires...
                            </a>
                        {% endif %}
                    </div>
                {% endif %}


            </div>
        {% endfor %}
    </div>
{% endblock %}